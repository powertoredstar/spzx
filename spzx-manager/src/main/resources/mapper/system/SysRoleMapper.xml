<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="xiaoxin.spzx.manager.mapper.SysRoleMapper">

<!--   映射查询到的字段-->
    <resultMap id="sysRoleMap" type="xiaoxin.spzx.model.entity.system.SysRole" autoMapping="true"></resultMap>
<!--    用于select查询公用抽取的列-->
    <sql id="columns" >
        id,role_name,role_code,description,create_time,update_time.is_deleted
    </sql>
    <sql id="findPageWhere">
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like concat('%',#{roleName},'%')
            </if>
            and is_deleted = 0
        </where>
    </sql>
    <insert id="saveSysRole">
        insert into sys_role(
        id,
        role_name,
        role_code,
        description ,
        ) values(
        #{id},
        #{roleName},
        #{roleCode},
        #{description}
        )
    </insert>
    <update id="updateSysRole">
        update sys_role set
        <if test="roleName != null and roleName != ''">
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''">
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        update_time = now()
        where id = #{id}
    </update>
    <update id="deleteById">
        update sys_role set is_deleted = 1 where id = #{roleId}
    </update>
    <delete id="deleteByUserId">
        delete from sys_user_role sur where sur.user_id = #{userId}
    </delete>
    <insert id="dodoAssign">
        insert into sys_user_role (user_id,role_id,create_time,update_time,is_deleted)
        values(#{userId},#{roleId},now(),now(),0)
    </insert>
    <select id="findByPage" resultMap="sysRoleMap">
        select <include refid="columns"></include>
        from sys_role
        <include refid="findPageWhere"></include>
        order by id desc
    </select>
<!--    查询所有的角色数据-->
    <select id="findAllRoles" resultType="xiaoxin.spzx.model.entity.system.SysRole">
        select <include refid="columns">
    </include> from sys_role where is_deleted = 0
    </select>
<!--    查询指定用户所对应的角色数据-->
    <select id="findSysUserRoleByUserId" resultType="java.lang.Long">
        select role_id from sys_user_role sur where sur.user_id =#{userId}
    </select>
</mapper>