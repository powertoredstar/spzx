<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="xiaoxin.spzx.product.mapper.ProductDetailsMapper">
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,product_id,image_urls,create_time,update_time,is_deleted
    </sql>
    <resultMap id="productDetailsMap" type="xiaoxin.spzx.model.entity.product.ProductDetails"></resultMap>

    <select id="getByProductId" resultMap="productDetailsMap">\
    select <include refid="columns"></include>
        from product_details
        where product_id = #{productId}
    </select>
</mapper>